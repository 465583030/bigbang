<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_item_background"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    >

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/drawer_item_icon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/ic_action_action_home"
        />

    <TextView
        android:id="@android:id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/drawer_item_indicator"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="7dp"
        android:paddingEnd="17dp"
        android:paddingStart="17dp"
        android:paddingTop="7dp"
        android:textSize="16sp"
        tools:text="324"
        />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@android:id/icon"
        android:layout_toStartOf="@android:id/text2"
        style="@style/TextViewDrawerMainItem"
        tools:text="Hello"
        />

</RelativeLayout>
